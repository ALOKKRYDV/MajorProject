<%layout("/layouts/boilerplate.ejs")%>
<div class="row mt-3">
<div class="col-8 offset-2">
    <h2>Edit your Listing</h2>
    <form method="post" action="/listings/<%=result.id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data"> 
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" value="<%=result.title%>" required><br>
        <div class="invalid-feedback">
            Please enter a title.
        </div>    
        </div>
        <div class="mb-3">
        <img src="<%= result.image.url %>" alt="<%= result.title %>" style="width:200px;height:200px;"><br>
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" id="image" class="form-control" name="image[url]" >
        <div class="invalid-feedback">
            Please enter an image URL.
        </div>
        </div>
        <div class="mb-3">
        <label for="description" class="form-label"><b>Description :</b></label><br>
        <textarea name="description" class="form-control" id="description" rows="10" cols="20" required><%=result.description%></textarea>
        <div class="invalid-feedback">
            Please enter a description.
        </div>
        </div>
        <div class="mb-3">
        <label for="category" class="form-label">Select Category</label><br>
        <select name="category" id="category" value="<%=result.category%>">
            <option value="Trending">Trending</option>
            <option value="Rooms">Rooms</option>
            <option value="Iconic-cities">Iconic-cities</option>
            <option value="Mountains">Mountains</option>
            <option value="Castels">Castels</option>
            <option value="Amazing-pool">Amazing-pool</option>
            <option value="Camping">Camping</option>
            <option value="Farms">Farms</option>
            <option value="Arctic">Arctic</option>
        </select>
        <div class="invalid-feedback">
            Please select a Category.
        </div>    
        </div>
        <div class="mb-3">
        <label for="price" class="form-label"><b>Price :</b></label>
        <input type="number" id="price" class="form-control" name="price" value="<%=result.price%>" required>
        <div class="invalid-feedback">
            Please enter a price.
        </div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-5">
        <label for="location" class="form-label"><b>Location :</b></label>
        <input type="text" id="location" class="form-control" name="location" value="<%=result.location%>" required>
        <div class="invalid-feedback">
            Please enter a location.
        </div>
        </div>
        <div class="mb-3 col-md-5">
        <label for="country" class="form-label"><b>Country :</b></label>
        <input type="text" id="country" class="form-control" name="country" value="<%=result.country%>" required>
        <div class="invalid-feedback">
            Please enter a country.
        </div>
        </div>
        </div>
        <button type="submit" class="btn btn-dark edit-btn">Edit Listing</button>
    </form>
    <br><br>
</div></div>
